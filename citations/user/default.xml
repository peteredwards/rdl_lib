<?xml version="1.0" ?>

<!-- 
	Citation Styles for user records.
-->

<cite:citation xmlns="http://www.w3.org/1999/xhtml" xmlns:cite="http://eprints.org/ep3/citation" xmlns:epc="http://eprints.org/ep3/control">

<cite:linkhere><span class="ep_name_citation"><epc:choose>
  <epc:when test="name"><epc:print expr="name"/></epc:when>
  <epc:when test="email"><epc:phrase ref="lib/citation:unnamed_user_email"/> <epc:print expr="email"/></epc:when>
  <epc:otherwise><epc:phrase ref="lib/citation:unnamed_user_name"/> <epc:print expr="username"/></epc:otherwise>
</epc:choose></span></cite:linkhere>

</cite:citation>
